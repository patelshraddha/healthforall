<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.healthforall.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="StartingActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.healthforall.android.profile.AddCaseActivity"
            android:configChanges="orientation"
            android:label="Add new case"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="com.healthforall.android.profile.AddCaseActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="LoginActivity"
            android:configChanges="orientation"
            android:label="Login Screen" >
            <intent-filter>
                <action android:name="com.healthforall.android.LoginActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.healthforall.android.profile.ProfileActivity"
            android:configChanges="orientation"
            android:label="Profile Details" >
            <intent-filter>
                <action android:name="com.healthforall.android.profile.ProfileActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.healthforall.android.edit.EditActivity"
            android:configChanges="orientation"
            android:label="Edit Details"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="com.healthforall.android.edit.EditActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.healthforall.android.addpatient.AddPatientActivity"
            android:configChanges="orientation"
            android:label="Add new patient"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="com.healthforall.android.addpatient.AddPatientActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>